{% block content %}
<nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #e3f2fd;">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{url_for('main.home')}}" style="color: red;">Marvel</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{url_for('main.home')}}" style="color: red;">Home</a>
        </li>
      {% if not current_user.is_authenticated %}
        <li class="nav-item">
          <a class="nav-link active" href="{{url_for('auth.register')}}" style="color: red;">Register</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="{{url_for('auth.login')}}" style="color: red;">Login</a>
        </li>
      {% else %}
        <li class="nav-item">
          <a class="nav-link active" href="{{url_for('social.collect_heroes')}}" style="color: red;">Collect-Heroes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="{{url_for('social.your_collection', username=current_user.username)}}" style="color: red;">Your Collection</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="{{url_for('auth.logout')}}" style="color: red;">Logout</a>
        </li>
      {% endif %}
      </ul>
    </div>
  </div>
</nav>

{% endblock %}